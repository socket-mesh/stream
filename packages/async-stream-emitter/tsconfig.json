{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist/src/",
		"noImplicitAny": true,
		"module": "ES2020",
		"target": "ES2020",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"sourceMap": true,
		"lib": ["ES2020", "dom"]
	},
	"ts-node": {
		"compilerOptions": {
			"module": "ES2020"
		}
	},
	"exclude": ["test", "dist", "**/*.spec.ts"]
}