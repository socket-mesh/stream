{
  "compilerOptions": {
		"rootDir": "./src",
    "outDir": "./dist/src/",
    "noImplicitAny": true,
    "module": "ES2020",
    "target": "ES2020",
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
    "moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["es2020", "dom"]
  },
	"exclude": ["test", "dist", "**/*.spec.ts"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}